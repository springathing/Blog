@model mblyakher_blog.Models.Email

@{
    ViewBag.Title = "Contact";
}

    <div class="col-md-6 col-sm-12">
        <h2>Send Me A Message</h2>
        <hr />
        <p>I will get back to you as soon as I can!</p>
    </div>
    <div class="col-md-6 col-sm-12">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.FromName, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.FromName, new { @class = "form-control", placeholder = "Your Name" }) @Html.ValidationMessageFor(m => m.FromName)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.FromEmail, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.FromEmail, new { @class = "form-control", placeholder = "Example@email.com" }) @Html.ValidationMessageFor(m => m.FromEmail)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Subject, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Subject, new { @class = "form-control", placeholder = "Subject" }) @Html.ValidationMessageFor(m => m.Subject)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Body, new { @class = "col-md-2 control-label", placeholder = "Comments..." })
                <div class="col-md-10">
                    <textarea class="form-control" name="Body" rows="5"></textarea>
                    @*@Html.TextAreaFor(m => m.Body, new { @class = "form-control" }) @Html.ValidationMessageFor(m => m.FromEmail)*@
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-primary" value="Send" />
                </div>
            </div>
        }
    </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}