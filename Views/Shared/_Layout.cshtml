        font-weight: 800;
        letter-spacing: 1px;
        text-transform: uppercase;
    }

@@media only screen and (min-width: 992px) {
    #mainNav {
        border-bottom: 1px solid transparent;
        background: transparent;
    }

        #mainNav .navbar-brand {
            padding: 15px 20px;
            color: white;
        }

            #mainNav .navbar-brand:focus, #mainNav .navbar-brand:hover {
